<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<!-- o -->
		<parameter key="anyx_social.account.factory.class">Anyx\SocialUserBundle\User\AccountFactory</parameter>
		
		<!-- User managers -->
		<parameter key="anyx_social_user.user.manager.mongodb.class">Anyx\SocialUserBundle\Document\UserManager</parameter>
		<!-- Controllers -->
		<parameter key="anyx_social.controller.login.class">Anyx\SocialBundle\Controller\LoginController</parameter>

	</parameters>

    <services>
		<service id="anyx_social.account.factory" class="%anyx_social.account.factory.class%">
		</service>

		<!-- User managers -->
		<service id="anyx_social_user.user.manager.mongodb" class="%anyx_social_user.user.manager.mongodb.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="fos_user.document_manager" />
            <argument>%fos_user.model.user.class%</argument>
		</service>

		<!-- Controllers -->
		<service id="anyx_social.controller.login" class="%anyx_social.controller.login.class%">
			<argument type="service" id="anyx_social.authentication.manager" />
			<argument type="service" id="anyx_social.account.factory" />
			<argument type="service" id="fos_user.user_manager" />
			<argument type="service" id="security.context" />
		</service>

	</services>

</container>
