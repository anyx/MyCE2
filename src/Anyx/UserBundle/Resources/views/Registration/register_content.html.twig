{% form_theme form 'AnyxCrosswordBundle:Form:theme.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="six-columns  fos_user_registration_register">
    {{ form_errors(form) }}
    <div class="margin-bottom">
    {{ form_label(form.username) }}
    {{ form_widget(form.username, { 'attr': { 'class' : 'input full-width' } }) }}
    {{ form_errors(form.username) }}
    </div>
    <div class="margin-bottom">
    {{ form_label(form.email) }}
    {{ form_widget(form.email, { 'attr': { 'class' : 'input full-width' } }) }}
    {{ form_errors(form.email) }}
    </div>        

    <div class="margin-bottom">
    {{ form_label(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first, { 'attr': { 'class' : 'input full-width' } }) }}
    {{ form_errors(form.plainPassword.first) }}
    </div>        

    <div class="margin-bottom">
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second, { 'attr': { 'class' : 'input full-width' } }) }}
    {{ form_errors(form.plainPassword.second) }}
    </div>        
    
    {{ form_rest(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="button blue-gradient" />
    </div>
</form>
