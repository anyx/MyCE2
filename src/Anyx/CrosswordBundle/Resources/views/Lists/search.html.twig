{% extends '::main.html.twig' %}

{% block page_title %}
    {{ 'Search' | trans }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets
        '@AnyxCrosswordBundle/Resources/public/css/styles/form.css'
        '@AnyxCrosswordBundle/Resources/public/css/colors.css'
        '@WhiteOctoberPagerfantaBundle/Resources/public/css/pagerfantaDefault.css'
	%}
		<link type="text/css" rel="stylesheet" href="{{ asset_url }}" />
	{% endstylesheets %}
{% endblock %}

{% block body %}

{% include 'AnyxCrosswordBundle:Lists:form.html.twig' with {'form': form} %}

<div class="results clear">
    {% if result is empty %}
        <span class="results-info margin-bottom">{{ 'Unfortunately nothing found' | trans }}</span>
    {% else %}
        <span class="results-info margin-bottom">{{ 'Total found crosswords' | trans }}: {{ result.count }}</span>
        <ul>
        {% for crossword in result %}
        <li class="margin-bottom">
            <a href="{{path('crossword_solve', {'id' : crossword.id })}}">{{ crossword.title }}</a>
            <br>
            <small>{{ crossword.description | truncate(300)}}</small>
            <div class="crossword-info  blue-color">
                <span class="count-solving icon-users icon-size1 color" title="{{ 'Count solving' | trans }}">{{ crossword.countSolving }}</span>
                <small class="margin-left" title="{{ 'Date create' | trans }}">{{ crossword.createdAt.format('d.m.Y') }}</small>
            </div>
        </li>
        {% endfor %}
        </ul>
        <div class="pagerfanta">
            {{ pagerfanta(result, 'default', pagerfanta_opts) }}
        </div>        
    {% endif %}
        
</div>

{% endblock %}
