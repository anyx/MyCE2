{% include 'AnyxCrosswordBundle:Lists:pagination.html.twig' with {'result': result}  %}

<ul class="eight-columns bullets">
{% for crossword in result %}
<li class="margin-bottom margin-top">
    <a href="{{path('crossword_solve', {'id' : crossword.id })}}">{{ crossword.title }}</a>
    <br>
    <small>{{ crossword.description | truncate(300)}}</small>

    {% if (crossword.hasTags()) %}
    <div class="b-tags-list">
        {% for tag in crossword.tagsTexts %}
            <span class="tag j-tag">{{tag}}</span>
        {% endfor %}
    </div>                
    {% endif%}
    
    <div class="crossword-info  blue-color">
        <span class="count-solving icon-users icon-size1 color" title="{{ 'Count solvings' | trans }}">{{ crossword.countSolvings }}</span>
        <span class="icon-read margin-left icon-size1 color" title="{{ 'Count words' | trans }}">{{ crossword.countWords }}</span>
        <small class="margin-left" title="{{ 'Published date' | trans }}">{{ crossword.publishedAt.format('d.m.Y') }}</small>
    </div>
</li>
{% endfor %}
</ul>

{% include 'AnyxCrosswordBundle:Lists:pagination.html.twig' with {'result': result}  %}