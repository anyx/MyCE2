<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="anyx_social.account.manager.class">Anyx\SocialBundle\Authentication\Manager</parameter>
        <parameter key="anyx_social.provider.factory.class">Anyx\SocialBundle\Provider\Factory</parameter>
        <parameter key="anyx_social.provider.facebook.class">Anyx\SocialBundle\Provider\FacebookProvider</parameter>
		<!-- o -->
		<parameter key="anyx_social.account.factory.class">Anyx\SocialBundle\User\AccountFactory</parameter>

	
		<parameter key="anyx_social.user.manager.mongodb.class">Anyx\SocialBundle\Document\UserManager</parameter>
	</parameters>

    <services>
        <service id="anyx_social.provider.factory" class="%anyx_social.provider.factory.class%">
             <argument type="service" id="buzz"/>
        </service>

		<service id="anyx_social.account.manager" class="%anyx_social.account.manager.class%">
             <argument type="service" id="anyx_social.provider.factory"/>
        </service>

		<service id="anyx_social.account.factory" class="%anyx_social.account.factory.class%">
		</service>

		<service id="anyx_social.user.manager.mongodb" class="%anyx_social.user.manager.mongodb.class%">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="fos_user.document_manager" />
            <argument>%fos_user.model.user.class%</argument>
		</service>

    </services>

</container>
